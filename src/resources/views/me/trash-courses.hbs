<div class="" style="left: 204px;
    top: 72px;
    flex: 0 0 auto;
    width: 80%;
    position: absolute;">
  <form name="container-form" method="POST" action="/courses/handle-trashForm-action" class="mt-4">
  <div>
    <h3>My TRASH </h3>
    <a href="/me/stored/courses">Back</a>
    <div class="mt-4 d-flex align-items-center">
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          value=""
          id="checkbox-all"
        />
        <label class="form-check-label" for="checkbox-all">
          select All
        </label>
      </div>
      <select
        class="form-select form-select-sm"
        aria-label="Default select example"
        name="action"
        required
      >
        <option value="" >-- Chọn hành động --</option>
        <option value="delete">Xóa</option>
        <option value="restore">Khôi phục</option>
     
      </select>
      <button class="btn btn-primary btn-sm disabled btn-checked-all">Thực hiện</button>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">VideoID</th>
        <th scope="col">Thời gian tạo</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th>
            <div class="form-check">
            <input class="form-check-input" type="checkbox" value="{{this._id}}" name="coursesIds[]" id="flexCheckDefault"/>
          </th>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.videoID}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href="" class="btn btn-light btn-restore" data-id="{{this._id}}"="">Restore</a>
          </td>
          <td>
            <a
              href=""
              class="btn btn-light"
              data-bs-toggle="modal"
              data-bs-target="#deleteCourse"
              data-id="{{this._id}}"
            >Delete</a>
          </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="5" class="text-center">Thùng rác trống
            <a href="/me/stored/courses">Danh sách khóa học</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</form>
</div>
{{!--  --}}
<form name="restore-form" method="POST"></form>
<form name="delete-form" method="POST"></form>
{{! confirm xóa }}
<div
  class="modal fade"
  id="deleteCourse"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Xóa khóa học ?</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn xóa khóa học này ?
      </div>
      <div class="modal-footer">
        <button id="btn_delete"type="button" class="btn btn-danger">Xóa bỏ</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Hủy</button>

      </div>
    </div>
  </div>
</div>
<script>
  var checkboxAll = document.getElementById('checkbox-all');
  var checkboxItems = document.querySelectorAll('input[name="coursesIds[]"]')
  var btn_checkboxAll = document.querySelector('.btn-checked-all')
  var container_form = document.forms['container-form']
  //////
  document.addEventListener("DOMContentLoaded", function(){
    var courseID;
    var restoreForm = document.forms['restore-form']
  var deleteForm = document.forms['delete-form']
  //xoa vinh vien
  $('#deleteCourse').on('shown.bs.modal', function(e){ 
    var btn =$(e.relatedTarget); 
    courseID = btn.data('id'); 
    })
  document.getElementById('btn_delete').addEventListener('click', function(){
          deleteForm.action ='/courses/'+courseID+'/force?_method=DELETE';
          deleteForm.submit();
  })
 // click restore
  var restoreBtns = document.querySelectorAll('.btn-restore');
    for(var restoreBtn of restoreBtns){
      restoreBtn.addEventListener('click', function(event){
        event.preventDefault();
        var restoreBtnId = restoreBtn.getAttribute('data-id');
         restoreForm.action ='/courses/'+restoreBtnId+'/restore?_method=PATCH';
          restoreForm.submit();
      })
    }
  })

  checkboxAll.onchange = function(){
     var isCheck = checkboxAll.checked;
     
     //checkbox all change
       checkboxItems.forEach( (item) => {
        item.checked = isCheck;
        renderCheckAllSubmitBtn()
       })  
  }

     checkboxItems.forEach( (item) => {
        item.onchange = () => {
           var isCheckAll = checkboxItems.length === $('input[name="coursesIds[]"]:checked').length;
           checkboxAll.checked = isCheckAll;
           renderCheckAllSubmitBtn()
          
        }
       })

       function renderCheckAllSubmitBtn() {
      var checkedCount =$('input[name="coursesIds[]"]:checked').length;
      console.log(checkedCount)
      if(checkedCount > 0 ){
        btn_checkboxAll.classList.remove('disabled')
      }
      else{
        btn_checkboxAll.classList.add('disabled')
      }

       btn_checkboxAll.onclick = function(e){
   e.preventDefault();
    var isSubmitable = !btn_checkboxAll.classList.contains('disabled');
    if(isSubmitable){
      container_form.submit();
    }
   }

   btn_checkboxAll.addEventListener('submit', function(e){
     var isSubmitable = !btn_checkboxAll.classList.contains('disabled');
    if(!isSubmitable){
      e.preventDefault();
    }
   })
   }
</script>