<div class="mt-4">

  <div class="row">
    
    <div class="col-6 " >
      <div style="position: absolute; top :75px; width :80%">
        <div class="row row-slide ">
        
        <div id="myCarousel" class="carousel slide " data-ride="carousel">
          <div class="carousel-inner slide">

            <div class="item active">
              <div class="img-slide">
                <img
                
                src="https://files.fullstack.edu.vn/f8-prod/banners/Banner_03_youtube.png"
                
              />
              </div>

            </div>

            <div class="item">
              <div class="img-slide">
              <img
                
                src="https://files.fullstack.edu.vn/f8-prod/banners/Banner_01_2.png"
              />
              </div>

            </div>

            <div class="item">
              <div class="img-slide">
              <img
                
                src="https://files.fullstack.edu.vn/f8-prod/banners/20/6308a6bf603a4.png"
              />
              </div>

            </div>
            <a
              class="left carousel-control"
              href="#myCarousel"
              data-slide="prev"
            >
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="right carousel-control"
              href="#myCarousel"
              data-slide="next"
            >
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>

          </div>
        </div>
      
      </div>
      <div class="row">
        {{#if isLogin}}
            {{#if isUser}}
                {{#each courses}}
          <div class="col-sm-8 col-lg-3 " style="margin-bottom: 32px; height :308px">
            <div class="card card-course-item" style="height :308px">
              <a href="/courses/{{this.slug}}">
                <img
                  src="{{this.image}}"
                  class="card-img-top"
                  alt="{{this.name}}"
                  style="width: 100%; height:180px"
                />
              </a>

              <div class="card-body">
                <a href="/courses/{{this.slug}}">
                  <h5 class="card-title">{{this.name}}</h5>
                </a>

                <p class="card-text line  ">{{this.description}}</p>
                
              
                    <a href="/courses/mycourses/{{this._id}}" class="btn btn-primary">By Course</a>
             
                
                
              </div>
            </div>
          </div>
                {{/each}}
            {{else}}
            {{#each courses}}
          <div class="col-sm-8 col-lg-3 " style="margin-bottom: 32px; ">
            <div class="card card-course-item">
              <a href="/courses/{{this.slug}}">
                <img
                  src="{{this.image}}"
                  class="card-img-top"
                  alt="{{this.name}}"
                  style="width: 100%; height:180px"
                />
              </a>

              <div class="card-body">
                <a href="/courses/{{this.slug}}">
                  <h5 class="card-title">{{this.name}}</h5>
                </a>

                <p class="card-text line  ">{{this.description}}</p>
                
                <a href="#" class="btn btn-primary" style="display: none;">By Course</a>
                
              </div>
            </div>
          </div>
                {{/each}}
            {{/if}}
        {{else}}
                {{#each courses}}
          <div class="col-sm-8 col-lg-3 " style="margin-bottom: 32px;">
            <div class="card card-course-item">
              
                <img
                  src="{{this.image}}"
                  class="card-img-top"
                  alt="{{this.name}}"
                  style="width: 100%; height:180px"
                />
              

              <div class="card-body">
                
                  <h5 class="card-title">{{this.name}}</h5>
                

                <p class="card-text line  ">{{this.description}}</p>
                
                <a href="#" class="btn btn-primary" style="display: none;">By Course</a>
                
              </div>
            </div>
          </div>
                {{/each}}
         {{/if}}
        
      </div>
      </div>

    </div>

  </div>

</div>
